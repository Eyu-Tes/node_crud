<form action="/products" method="POST" novalidate class="form">
    <h3 class="mb-5">Create New Product</h3>
    <div class="form-group">
        <label for="code">Product Code</label>
        <input type="text" name="productCode" id="productCode" value="{{productCode}}" class="form-control">
        <small class="invalid-feedback d-block">{{error.errors.productCode}}</small>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="{{name}}" class="form-control">
        <small class="invalid-feedback d-block">{{error.errors.name}}</small>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        {{!-- float input type --}}
        <input type="number" step="any" name="price" id="price" value="{{price}}" class="form-control">
        <small class="invalid-feedback d-block">{{error.errors.price}}</small>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="text" name="quantity" id="quantity" value="{{quantity}}" class="form-control">
        <small class="invalid-feedback d-block">{{error.errors.quantity}}</small>
    </div>
    <div class="form-group">
        <label for="category">category</label>
        <div class="d-block">
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="indoor" name="category" value="indoor" {{{setChecked 'indoor' category}}} class="custom-control-input">
                <label class="custom-control-label" for="indoor">Indoor</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="outdoor" name="category" value="outdoor" {{{setChecked 'outdoor' category}}} class="custom-control-input">
                <label class="custom-control-label" for="outdoor">Outdoor</label>
            </div>
        </div>
    </div>
    <input type="submit" value="Create" class="btn btn-block btn-primary mt-4">
</form>
